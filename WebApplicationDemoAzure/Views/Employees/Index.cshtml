@{
    ViewData["Title"] = "Employees";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    #loader {
        display: none;
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.7) url('https://i.stack.imgur.com/ATB3o.gif') center center no-repeat;
    }
</style>

<div id="loader"></div>

<div class="container mt-4">
    <h2>Employee Management</h2>

    <button class="btn btn-primary mb-3" onclick="openAddModal()">Add Employee</button>

    <table class="table table-bordered" id="employeeTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="employeeForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Employee Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="employeeId" />
                    <div class="mb-3">
                        <label>Name</label>
                        <input type="text" class="form-control" id="employeeName" required />
                    </div>
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" class="form-control" id="employeeEmail" required />
                    </div>
                    <div class="mb-3">
                        <label>Department</label>
                        <input type="text" class="form-control" id="employeeDept" required />
                    </div>
                    <div class="mb-3">
                        <label>Salary</label>
                        <input type="number" step="0.01" class="form-control" id="employeeSalary" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="createBtn">Save</button>
                    <button type="button" class="btn btn-warning" id="updateBtn">Update</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        loadEmployees();

        $('#createBtn').click(function (e) {
            e.preventDefault();
            createEmployee();
        });

        $('#updateBtn').click(function (e) {
            e.preventDefault();
            updateEmployee();
        });
    });

    function showLoader() {
        $('#loader').show();
    }
    function hideLoader() {
        $('#loader').hide();
    }
    function showSuccess(message) {
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: 'Employee added successfully.',
            confirmButtonText: 'OK'
        });
    }
    function showUpdateSuccess(message) {
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: 'Employee updated successfully.',
            confirmButtonText: 'OK'
        });
    }
    function showDeleteSuccess(message) {
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: 'Employee deleted successfully.',
            confirmButtonText: 'OK'
        });
    }
    function showError(message) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Something went wrong!',
            confirmButtonText: 'OK'
        });
    }

    function loadEmployees() {
        showLoader();
        $.ajax({
            url: '/Employees/GetAll',
            type: 'GET',
            success: function (data) {
                let rows = '';
                $.each(data, function (i, emp) {
                    rows += `<tr>
                                <td>${emp.id}</td>
                                <td>${emp.name}</td>
                                <td>${emp.email}</td>
                                <td>${emp.department}</td>
                                <td>${emp.salary}</td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="openEditModal(${emp.id}, '${emp.name}', '${emp.email}', '${emp.department}', ${emp.salary})">Edit</button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteEmployee(${emp.id})">Delete</button>
                                </td>
                            </tr>`;
                });
                $('#employeeTable tbody').html(rows);
                hideLoader();
            },
            error: function () {
                hideLoader();
                showError("Failed to load employees.");
            }
        });
    }

    function openAddModal() {
        $('#employeeForm')[0].reset();
        $('#employeeId').val(0);
        $('#createBtn').show();
        $('#updateBtn').hide();
        $('#employeeModal').modal('show');
    }

    function openEditModal(id, name, email, dept, salary) {
        $('#employeeId').val(id);
        $('#employeeName').val(name);
        $('#employeeEmail').val(email);
        $('#employeeDept').val(dept);
        $('#employeeSalary').val(salary);
        $('#createBtn').hide();
        $('#updateBtn').show();
        $('#employeeModal').modal('show');
    }

    function createEmployee() {
        var employee = {
            name: $("#employeeName").val(),
            email: $("#employeeEmail").val(),
            department: $("#employeeDept").val(),
            salary: parseFloat($("#employeeSalary").val())
        };

        showLoader();
        $.ajax({
            url: '/Employees/Create',
            type: 'POST',
            contentType: "application/json",
            data: JSON.stringify(employee),
            success: function (res) {
                hideLoader();
                if (res.success) {
                    $('#employeeModal').modal('hide');
                    loadEmployees();
                    showSuccess("Employee added successfully.");
                } else {
                    showError(res.message || "Error inserting employee.");
                }
            },
            error: function () {
                hideLoader();
                showError("Server error while creating employee.");
            }
        });
    }

    function updateEmployee() {
        var employee = {
            id: $("#employeeId").val(),
            name: $("#employeeName").val(),
            email: $("#employeeEmail").val(),
            department: $("#employeeDept").val(),
            salary: parseFloat($("#employeeSalary").val())
        };

        showLoader();
        $.ajax({
            url: '/Employees/Update',
            type: 'PUT',
            contentType: "application/json",
            data: JSON.stringify(employee),
            success: function (res) {
                hideLoader();
                if (res.success) {
                    $('#employeeModal').modal('hide');
                    loadEmployees();
                    showUpdateSuccess("Employee updated successfully.");
                } else {
                    showError(res.message || "Error updating employee.");
                }
            },
            error: function () {
                hideLoader();
                showError("Server error while updating employee.");
            }
        });
    }

    function deleteEmployee(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This action cannot be undone!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                showLoader();
                $.ajax({
                    url: '/Employees/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        hideLoader();
                        if (res.success) {
                            loadEmployees();
                            showDeleteSuccess("Employee deleted successfully.");
                        } else {
                            showError(res.message || "Delete failed.");
                        }
                    },
                    error: function () {
                        hideLoader();
                        showError("Server error while deleting employee.");
                    }
                });
            }
        });
    }
</script>
